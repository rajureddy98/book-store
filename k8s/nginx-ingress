# Ingress resource for the application
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: book-store
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: nginx
  rules:
  - host: rajureddy.tech
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: bookstore-frontend-react-app-service
            port:
              number: 3000

  - host: api.rajureddy.tech
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: api-gateway-service
            port:
              number: 80
